            </HBox>

            <!-- EstadÃ­sticas -->
            <HBox spacing="30" alignment="CENTER_LEFT" style="-fx-background-color: rgba(255,255,255,0.1); -fx-padding: 15; -fx-background-radius: 10;">
                <VBox spacing="5">
                    <Label text="Total PerÃ­odo" style="-fx-text-fill: #bdc3c7; -fx-font-size: 12px;"/>
                    <Label fx:id="lblTotalPeriodo" text="0.00 h" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
