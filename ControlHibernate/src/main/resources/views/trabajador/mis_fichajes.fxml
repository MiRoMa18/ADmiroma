                <Separator orientation="VERTICAL"/>

                <VBox spacing="5">
                    <Label text="Promedio Diario" style="-fx-text-fill: #bdc3c7; -fx-font-size: 12px;"/>
                    <Label fx:id="lblPromedioDiario" text="0.00 h" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
