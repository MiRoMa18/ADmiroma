            </HBox>

        </VBox>
    </top>

    <!-- Tabla de fichajes -->
    <center>
        <TableView fx:id="tableFichajes" style="-fx-background-color: white;">
            <columns>
                <TableColumn fx:id="colFecha" text="Fecha" prefWidth="110"/>
                <TableColumn fx:id="colHora" text="Hora" prefWidth="80"/>
                <TableColumn fx:id="colTipo" text="Tipo" prefWidth="120"/>
                <TableColumn fx:id="colNotas" text="Notas" prefWidth="150"/>
                <TableColumn fx:id="colClima" text="Clima" prefWidth="130"/>
                <TableColumn fx:id="colHorasSegmento" text="Horas" prefWidth="100"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #34495e; -fx-padding: 15;">
            <Button fx:id="btnVolver"
