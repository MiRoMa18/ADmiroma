            <!-- Filtros -->
            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="Filtrar por:" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"/>

                <ComboBox fx:id="cbFiltro" prefWidth="120" style="-fx-font-size: 14px;"/>

                <Label text="Fecha:" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"/>

